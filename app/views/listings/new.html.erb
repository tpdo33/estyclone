<h1 align ="center"> New Listing </h1>
<form action ="/listings" method ="post" id ="article[id]" enctype="multipart/form-data">
	<input type ="hidden" name ="authenticity_token" value="<%= form_authenticity_token %>">
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Name </label>
		<div class = "col-sm-10">
			<input type ="text" class ="form-control" name ="listing[name]">
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label">Description </label>
		<div class ="col-sm-10">
			<textarea name="listing[description]" class ="form-control" rows ="10" placeholder ="Description of article"></textarea>
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Price</label>
		<div class = "col-sm-10">
			<input type ="text" class ="form-control" name ="listing[price]">
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Image </label>
		<div class ="col-sm-10">
			<input type ="file" class ="form-control" name ="listing[image]" multiple>
		</div>
	</div>
	<div class ="form-group row">
		<div class ="col-sm-offset-2 col-sm-10">
			<button type ="submit" class ="btn btn-primary btn-md">Create listing</button>
		</div>
	</div>
</form>
<%= link_to 'Back', listings_path %>
