
<h1>Editing Listing</h1>

<h1 align ="center"> Edit exisiting listing</h1>
<form action ="/listings/<%=@listing.id%>" method ="post" enctype="multipart/form-data">
	<input type ="hidden" name ="authenticity_token" value="<%= form_authenticity_token %>">
	<input type ="hidden" name ="_method" value ="patch">
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Name </label>
		<div class = "col-sm-10">
			<input type ="text" class ="form-control" name ="listing[name]" value ="<%=@listing.name %>">
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label">Description </label>
		<div class ="col-sm-10">
			<textarea name="listing[description]" class ="form-control" rows ="10"><%=@listing.description %></textarea>
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Price </label>
		<div class = "col-sm-10">
			<input type ="text" class ="form-control" name ="listing[price]" value ="<%=@listing.price %>">
		</div>
	</div>
	<div class="form-group row">
		<label class ="col-sm-2 form-control-label"> Image </label>
		<div class ="col-sm-10">
			<input type ="file" class ="form-control" name ="listing[image]" value ="<%=@listing.image %>">
		</div>
	</div>
	<div class ="form-group row">
		<div class ="col-sm-offset-2 col-sm-10">
			<button type ="submit" class ="btn btn-primary btn-md">Update listing</button>
		</div>
	</div>
</form>

<button type= "button" class = "btn btn-link"><%= link_to 'Show', @listing %> </button> |
<button type ="button" class = "btn btn-link"><%= link_to 'Back', listings_path %> </button>

